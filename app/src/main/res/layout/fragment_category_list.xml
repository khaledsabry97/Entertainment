<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.khaledsabry.entertainment.Activities.MainActivity">

        <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    layout="@layout/barlayout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

             <android.support.design.widget.TabLayout
                 android:id="@+id/tablayout"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/blue"
                 app:tabTextColor="@color/cardview_light_background"
                 app:tabTextAppearance="@style/TextCategory"
                 app:tabSelectedTextColor="@color/red"
                 >
                 <android.support.design.widget.TabItem
                     android:id="@+id/all"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="All"
                     />

                 <android.support.design.widget.TabItem
                     android:id="@+id/movies"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Movie" />

                 <android.support.design.widget.TabItem
                     android:id="@+id/tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Tv" />

                 <android.support.design.widget.TabItem
                     android:id="@+id/artist"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Artist" />
             </android.support.design.widget.TabLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/listrecycle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/MainBackground"
                        tools:listitem="@layout/cardview_contentdetail"
                        ></android.support.v7.widget.RecyclerView>


                    <LinearLayout
                        android:id="@+id/adding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/brownandblack"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <ImageView
                            android:id="@+id/addcategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_playlist_add_black_24dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/changename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit_black_24dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/deletecategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_delete_forever_black_24dp"
                            android:layout_weight="1"/>
                    </LinearLayout>


                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <android.support.design.widget.NavigationView
                android:id="@+id/nav_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:forceHasOverlappingRendering="true"
                >
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/categoryrecycle"
                        android:background="@drawable/MainBackground"
                        app:layout_constraintBottom_toTopOf="@+id/adding"

                        ></android.support.v7.widget.RecyclerView>

                </android.support.constraint.ConstraintLayout>


            </android.support.design.widget.NavigationView>


        </android.support.v4.widget.DrawerLayout>

    </RelativeLayout>
</FrameLayout>
