<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khaledsabry.entertainment.Fragments.MovieView.MovieNavigationFragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/moviedetailid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_id"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/blue">


        </FrameLayout>
        <include layout="@layout/view_progress_bar"></include>

        <com.felix.bottomnavygation.BottomNav
            android:id="@+id/bottom_navigation_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shadow"
            app:layout_constraintBottom_toBottomOf="parent" >

        </com.felix.bottomnavygation.BottomNav>
    </android.support.constraint.ConstraintLayout>


</FrameLayout>
