<LinearLayout android:id="@+id/actor_crew"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_weight="1"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="342dp">

        <Button
            android:id="@+id/button_actors_id"
            style="@style/TextCategory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:text="Actors"
            tools:layout_editor_absoluteY="695dp" />

        <Button
            android:id="@+id/button_crew_id"
            style="@style/TextCategory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:text="Crew" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/actors_crews_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

</LinearLayout>