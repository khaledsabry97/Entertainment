<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:layout_marginLeft="@dimen/_2sdp"
    app:cardBackgroundColor="@color/cardview_dark_background">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_90sdp">

            <ImageView
                android:id="@+id/backdrop_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="fitXY"
                tools:src="@drawable/captainamerica" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignBottom="@+id/backdrop_id"
                android:background="@drawable/title_shadow"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title_id"
                style="@style/TextCategory"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/backdrop_id"

                android:layout_marginLeft="@dimen/_2sdp"

                android:autoSizeTextType="none"
                android:ellipsize="marquee"
                android:ems="@android:integer/config_shortAnimTime"
                android:lines="2"
                android:text="avengers infinity war sdfsd sdf dsfs dfsdfsd fsdfsd f"


                android:textAlignment="textStart"
                android:textSize="@dimen/_8sdp" />

        </RelativeLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/title_shadow"
            android:visibility="gone">

            <TextView
                android:id="@+id/character_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:background="@color/cardview_light_background"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:fontFamily="@font/carterone"
                android:gravity="left"
                android:paddingTop="0dp"
                android:text="Batman"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="8sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>