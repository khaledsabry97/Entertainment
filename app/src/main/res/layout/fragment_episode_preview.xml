<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background3"

    tools:context="com.example.khaledsabry.entertainment.Fragments.Tv.EpisodeSeasonPreviewFragment">




        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTintMode="src_over"
            android:orientation="horizontal">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <ImageView
                    android:id="@+id/posterid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"></ImageView>


                <TextView
                    android:id="@+id/downloadid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/rightroundborder"
                    android:fontFamily="@font/carterone"

                    android:shadowDx="2"
                    android:shadowDy="6"
                    android:shadowRadius="5"
                    android:text="Download"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/posterid"
                    app:layout_constraintEnd_toEndOf="@+id/posterid"
                    app:layout_constraintStart_toStartOf="parent" />
            </android.support.constraint.ConstraintLayout>


            <android.support.v4.widget.NestedScrollView
                android:id="@+id/sideid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleid"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:background="@drawable/blue"
                        android:fontFamily="@font/carterone"
                        android:includeFontPadding="true"
                        android:lines="1"
                        android:shadowColor="#000"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:textAlignment="center"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="30sp">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/overviewlayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_weight=".8"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:background="@drawable/rightroundborder"
                                android:fontFamily="@font/carterone"
                                android:text="Overview"
                                android:textColor="@color/cardview_light_background"
                                android:textSize="20sp" />

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/overviewid"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:background="@drawable/rightroundborder"
                                        android:fontFamily="@font/carterone"
                                        android:textColor="@color/cardview_light_background"
                                        android:textSize="17sp" />
                                </LinearLayout>
                            </ScrollView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/titleLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/titletextid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:background="@drawable/rightroundborder"
                                android:fontFamily="@font/carterone"
                                android:text="Title"
                                android:textAlignment="center"
                                android:textColor="@color/cardview_light_background"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/episodename"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/carterone"
                                android:textColor="@color/cardview_light_background"
                                android:textSize="17sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:background="@drawable/rightroundborder"
                                android:fontFamily="@font/carterone"
                                android:text="Air Date"
                                android:textAlignment="center"
                                android:textColor="@color/cardview_light_background"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/airdateid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/carterone"
                                android:textColor="@color/cardview_light_background"
                                android:textSize="17sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/rateLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ratetextid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:background="@drawable/rightroundborder"
                                android:fontFamily="@font/carterone"
                                android:outlineProvider="bounds"
                                android:text="Rate"
                                android:textAlignment="center"
                                android:textColor="@color/cardview_light_background"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/rateid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/carterone"
                                android:textColor="@color/cardview_light_background"
                                android:textSize="17sp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>


    </FrameLayout>
