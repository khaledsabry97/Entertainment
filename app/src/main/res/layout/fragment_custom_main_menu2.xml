<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.MainMenu.CustomMainMenu">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



<android.support.v7.widget.RecyclerView
    android:id="@+id/trend_recycler_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"



    ></android.support.v7.widget.RecyclerView>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/icons_recycler_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/view_pager_id"
            ></android.support.v7.widget.RecyclerView>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>


    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/content_recycler_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</FrameLayout>