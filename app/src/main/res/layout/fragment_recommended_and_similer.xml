<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.khaledsabry.entertainment.Fragments.MovieView.RecommendedAndSimilarFragment">


    <!-- TOUpdatingdate blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

        <android.support.v4.view.ViewPager
            android:id="@+id/recoviewPagerid"
            android:layout_width="match_parent"
            android:layout_height="0dp"></android.support.v4.view.ViewPager>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/recoindicatorid"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/titleIds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/carterone"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="40sp"
            android:typeface="normal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="43dp" />

    </android.support.constraint.ConstraintLayout>

    <!-- this is currently off-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/linearLayoutimages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/contentPanel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_weight="1"
                        android:foregroundGravity="center_horizontal|center"

                        tools:listitem="@layout/cardview_classification_item">

                    </android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/blue"
                            app:cardCornerRadius="2dp">

                            <Button
                                android:id="@+id/button_recommended_id"
                                style="@style/TextCategoryRound"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Recommmendations" />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/blue"
                            app:cardCornerRadius="2dp">

                            <Button
                                android:id="@+id/button_similar_id"
                                style="@style/TextCategoryRound"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:autoSizeTextType="uniform"
                                android:text="Similars" />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </LinearLayout>


                <FrameLayout
                    android:id="@+id/moviepreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>





        </android.support.constraint.ConstraintLayout>


</FrameLayout>
