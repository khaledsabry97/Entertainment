<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextCategoryRound">
        <item name="android:fontFamily">@font/carterone</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/size_main_category</item>
        <item name="android:textAlignment">center</item>
<item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:background">@drawable/round</item>



    </style>

    <style name="TextNormal">
        <item name="android:fontFamily">@font/carterone</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/size_normal_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/cardview_light_background</item>


    </style>




    <style name="TextHeader">
        <item name="android:fontFamily">@font/carterone</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/size_main_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/cardview_light_background</item>


    </style>



    <style name="TextCategory">
    <item name="android:fontFamily">@font/carterone</item>
    <item name="android:autoSizeTextType">uniform</item>
    <item name="android:lines">1</item>
    <item name="android:textSize">@dimen/size_main_category</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textColor">@color/cardview_light_background</item>

    </style>



    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">

        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/brownandblack</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">"type something"</item>
    </style>



</resources>